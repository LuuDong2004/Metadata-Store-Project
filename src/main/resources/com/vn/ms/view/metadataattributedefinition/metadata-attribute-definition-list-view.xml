<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://metadataAttributeDefinitionListView.title"
      focusComponent="metadataAttributeDefinitionsDataGrid">
    <data>
        <collection id="metadataAttributeDefinitionsDc"
                    class="com.vn.ms.entity.EntityMetaAttribute">
            <fetchPlan extends="_base"/>
            <loader id="metadataAttributeDefinitionsDl" readOnly="true">
                <query>
                    <![CDATA[select e from EntityMetaAttribute e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="metadataAttributeDefinitionsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="metadataAttributeDefinitionsDataGrid.createAction"/>
            <button id="editButton" action="metadataAttributeDefinitionsDataGrid.editAction"/>
            <button id="removeButton" action="metadataAttributeDefinitionsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="metadataAttributeDefinitionsDl"/>
        </hbox>
        <dataGrid id="metadataAttributeDefinitionsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="metadataAttributeDefinitionsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="type"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
